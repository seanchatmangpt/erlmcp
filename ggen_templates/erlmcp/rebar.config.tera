{# =============================================================================
     rebar.config for erlmcp_new_features
     ======================================================================== #}
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {src_dirs, ["src"]},
    {platform_define, "^[0-9]+", namespaced_types}
]}.

{deps, [
    {jiffy, "1.1.1"},
    {gun, "2.0.0"}
]}.

{shell, [
    {apps, [erlmcp_new_features]}
]}.

{dialyzer, [
    {warnings, [
        error_handling,
        race_conditions,
        unmatched_returns
    ]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{plugins, [
    rebar3_proper,
    rebar3_eqc
]}.

{profiles, [
    {test, [
        {deps, [
            {meck, "0.9.2"},
            {proper, "1.4.0"}
        ]},
        {erl_opts, [
            {d, 'TEST'}
        ]}
    ]},
    {ci, [
        {deps, [
            {proper, "1.4.0"}
        ]},
        {erl_opts, [
            {d, 'CI'}
        ]}
    ]}
]}.
