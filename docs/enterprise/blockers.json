        "id": "P0-001",
        "title": "Insecure Cookie Management in Cluster Configuration",
        "category": "security",
        "module": "vm.args, rebar.config",
        "description": "Hardcoded cookie erlmcp_secret_cookie and erlmcp_cluster in version control",
        "risk": "Cluster takeover via cookie disclosure",
        "evidence": "vm.args line 8: -setcookie erlmcp_secret_cookie",
        "remediation": [
          "Remove hardcoded cookies from all configs",
          "Implement environment variable injection",
          "Add cookie validation (minimum entropy 256 bits)",
          "Add cookie rotation mechanism"
        ],
        "effort_hours": 4,
        "assignee": "security-engineer",
        "dependencies": [],
        "milestone": "M1"
      },
