{
  "dashboard": {
    "id": null,
    "title": "ErlMCP System Metrics",
    "tags": ["erlmcp", "erlang", "mcp"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false
      },
      {
        "id": 2,
        "title": "CPU Utilization",
        "type": "stat",
        "targets": [{
          "expr": "system_cpu_utilization",
          "legendFormat": "CPU %"
        }],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 1},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [{
          "expr": "system_memory_bytes",
          "legendFormat": "{{type}}"
        }],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 1},
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Process Count",
        "type": "stat",
        "targets": [{
          "expr": "system_process_count",
          "legendFormat": "Processes"
        }],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 1},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100000},
                {"color": "red", "value": 200000}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "System Load",
        "type": "gauge",
        "targets": [{
          "expr": "system_scheduler_count",
          "legendFormat": "Schedulers"
        }],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 1},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 32
          }
        }
      },
      {
        "id": 6,
        "title": "Transport Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "collapsed": false
      },
      {
        "id": 7,
        "title": "Request Rate by Transport",
        "type": "timeseries",
        "targets": [{
          "expr": "rate(transport_metric{metric=\"requests_per_second\"}[5m])",
          "legendFormat": "{{transport}}"
        }],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Error Rate by Transport",
        "type": "timeseries",
        "targets": [{
          "expr": "transport_metric{metric=\"error_rate\"}",
          "legendFormat": "{{transport}} errors"
        }],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Application Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
        "collapsed": false
      },
      {
        "id": 10,
        "title": "Connection Pool Status",
        "type": "table",
        "targets": [{
          "expr": "connection_pool_metric",
          "legendFormat": "{{pool}} - {{metric}}",
          "format": "table"
        }],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 19},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Queue Depths",
        "type": "bargauge",
        "targets": [{
          "expr": "queue_metric{metric=\"depth\"}",
          "legendFormat": "{{queue}}"
        }],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 19},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "GC Statistics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(system_gc_count[1m])",
            "legendFormat": "GC Rate"
          },
          {
            "expr": "system_gc_words_reclaimed",
            "legendFormat": "Words Reclaimed"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 19},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Business Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27},
        "collapsed": false
      },
      {
        "id": 14,
        "title": "Message Processing Time",
        "type": "histogram",
        "targets": [{
          "expr": "histogram_quantile(0.95, timer_duration_microseconds_bucket)",
          "legendFormat": "95th percentile"
        }, {
          "expr": "histogram_quantile(0.50, timer_duration_microseconds_bucket)",
          "legendFormat": "Median"
        }],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28},
        "fieldConfig": {
          "defaults": {
            "unit": "Âµs",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      },
      {
        "id": 15,
        "title": "Success Rate",
        "type": "stat",
        "targets": [{
          "expr": "business_metric{metric=\"success_rate\"}",
          "legendFormat": "Success %"
        }],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 28},
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.95},
                {"color": "green", "value": 0.99}
              ]
            }
          }
        }
      },
      {
        "id": 16,
        "title": "SLA Compliance",
        "type": "table",
        "targets": [{
          "expr": "sla_metric",
          "legendFormat": "{{service}} - {{metric}}",
          "format": "table"
        }],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 28},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "color-background"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        }
      },
      {
        "id": 17,
        "title": "System Health",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 36},
        "collapsed": false
      },
      {
        "id": 18,
        "title": "I/O Statistics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(system_io_input_bytes[1m])",
            "legendFormat": "Input Rate"
          },
          {
            "expr": "rate(system_io_output_bytes[1m])",
            "legendFormat": "Output Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 37},
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      },
      {
        "id": 19,
        "title": "Context Switches",
        "type": "timeseries",
        "targets": [{
          "expr": "rate(system_context_switches[1m])",
          "legendFormat": "Context Switches/sec"
        }],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 37},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}