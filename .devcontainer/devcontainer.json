{
  "name": "erlmcp Dev Container",
  "image": "erlang:28.3.1-alpine",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "erlang-ls.erlang",
        "akiros.docker-explorer",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "postCreateCommand": "apk add --no-cache git make gcc g++ musl-dev openssl-dev ncurses-dev bash && rebar3 local install",
  "remoteUser": "root",
  "workingDir": "/workspaces/erlmcp",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/erlmcp,type=bind,consistency=cached"
  ]
}
