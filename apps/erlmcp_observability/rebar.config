%% ============================================================================
%% erlmcp_observability - Observability Layer
%% ============================================================================
%% Metrics, OpenTelemetry traces, receipt chains, monitoring
%% ============================================================================

{erl_opts, [
    debug_info,
    {i, "include"},
    {i, "../../include"},
    nowarn_export_vars
]}.

{deps, [
    {opentelemetry_api, "1.5.0"},
    {opentelemetry, "1.7.0"},
    {opentelemetry_exporter, "1.10.0"},
    {erlmcp_core, {path, "../erlmcp_core"}}
]}.

{eunit_opts, [verbose]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling
    ]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions
]}.

{xref_ignores, [
    %% OpenTelemetry API
    {otel_tracer, start_span, 1},
    {otel_tracer, get_tracer, 1},
    {otel_span, record_exception, 4},
    {otel, with_span, 3}
]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
