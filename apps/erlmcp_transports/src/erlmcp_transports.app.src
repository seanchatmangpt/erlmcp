{application, erlmcp_transports,
 [{description, "Erlang MCP Transports - STDIO, TCP, HTTP, WebSocket"},
  {vsn, "2.1.0"},
  {registered, [
      erlmcp_transport_sup
  ]},
  {applications, [
      kernel,
      stdlib,
      ssl,
      inets,
      gun,
      ranch,
      poolboy,
      cowboy,
      erlmcp_core,
      opentelemetry_api
  ]},
  {mod, {erlmcp_transports_app, []}},
  {env, [
      {transport_defaults, #{
          tcp => #{
              connect_timeout => 5000,
              keepalive => true,
              nodelay => true,
              port => 3000
          },
          http => #{
              connect_timeout => 5000,
              request_timeout => 30000,
              max_connections => 100,
              port => 3001
          },
          stdio => #{
              buffer_size => 65536,
              read_timeout => infinity
          }
      }}
  ]},
  {modules, []},
  {licenses, ["Apache-2.0"]},
  {links, [{"GitHub", "https://github.com/banyan-platform/erlmcp"}]},
  %% OTP 27+ Runtime Dependencies
  {runtime_dependencies, [
    "erts-16.0.3",     % OTP 28 ERTS minimum
    "kernel-10.4",     % OTP 28 Kernel minimum
    "stdlib-6.0",      % OTP 28 STDLIB minimum
    "ssl-11.0",        % SSL/TLS (OTP 28)
    "inets-9.0",       % HTTP client (OTP 28)
    "gun-2.0.1",       % HTTP client (external)
    "ranch-2.1.0",     % TCP acceptor pool (external)
    "cowboy-2.10.0",   % HTTP server (external)
    "poolboy-1.5.2",   % Connection pooling (external)
    "opentelemetry_api-1.5.0",  % OTEL API (external)
    "erlmcp_core-2.1.0"  % Core application
  ]},
  %% OTP Version Requirements
  {notes, [
      "Requires: Erlang/OTP 28+ (STRICT)",
      "OTP 28+ features: priority message routing for critical transport events, hibernate/0",
      "OTP 26+ features: concurrent startup, improved socket handling, persistent config",
      "Dependencies: gun 2.0+, ranch 2.1+, cowboy 2.10+, poolboy 1.5.2+",
      "Previous OTP 25 support deprecated - upgrade to OTP 28+ required",
      "See docs/OTP_APPLICATION_CONFIG_RESEARCH.md for transport-specific features"
  ]}
 ]}.
