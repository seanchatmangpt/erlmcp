{application, erlmcp_transports,
 [{description, "Erlang MCP Transports - STDIO, TCP, HTTP, WebSocket"},
  {vsn, "2.1.0"},
  {registered, [
      erlmcp_transport_sup
  ]},
  {applications, [
      kernel,
      stdlib,
      ssl,
      inets,
      gun,
      ranch,
      poolboy,
      cowboy,
      erlmcp_core,
      opentelemetry_api
  ]},
  {mod, {erlmcp_transports_app, []}},
  {env, [
      {transport_defaults, #{
          tcp => #{
              connect_timeout => 5000,
              keepalive => true,
              nodelay => true,
              port => 3000
          },
          http => #{
              connect_timeout => 5000,
              request_timeout => 30000,
              max_connections => 100,
              port => 3001
          },
          stdio => #{
              buffer_size => 65536,
              read_timeout => infinity
          }
      }}
  ]},
  {modules, []},
  {licenses, ["Apache-2.0"]},
  {links, [{"GitHub", "https://github.com/banyan-platform/erlmcp"}]},
  %% OTP Version Requirements
  {notes, [
      "Supports Erlang/OTP 25-28",
      "OTP 28+ features: priority message routing for critical transport events",
      "OTP 26+ features: improved socket handling",
      "Dependencies: gun 2.0+, ranch 2.1+, cowboy 2.10+",
      "Minimum: OTP 25 (all transports functional)",
      "Recommended: OTP 28+ for priority-based message delivery"
  ]}
 ]}.
