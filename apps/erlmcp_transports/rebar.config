%% ============================================================================
%% erlmcp_transports - Transport Layer
%% ============================================================================
%% 9 modules: stdio, tcp, http, websocket, behavior, validation, etc.
%% ============================================================================

{erl_opts, [
    debug_info,
    {i, "include"},
    {i, "../../include"},
    nowarn_export_vars
]}.

{deps, [
    {gun, "2.0.1"},
    {ranch, "2.1.0"},
    {poolboy, "1.5.2"},
    {cowboy, "2.10.0"},
    {erlmcp_core, {path, "../erlmcp_core"}}
]}.

{eunit_opts, [verbose]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        unknown
    ]},
    {plt_extra_apps, [gun, ranch, poolboy, cowboy, ssl, inets]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions
]}.

{xref_ignores, [
    %% Gun and Ranch are external dependencies
    {gun, open, 2},
    {gun, await, 2},
    {ranch, start_listener, 6},
    {poolboy, checkout, 1}
]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
