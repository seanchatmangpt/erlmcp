{application, erlmcp_ldap,
 [{description, "LDAP and Active Directory Integration"},
  {vsn, "3.0.0"},
  {modules, []},
  {registered, [erlmcp_ldap_supervisor,
               erlmcp_ldap_client,
               erlmcp_ldap_sync,
               erlmcp_ldap_auth]},
  {applications, [kernel,
                 stdlib,
                 ranch,
                 gun,
                 gproc,
                 jsx]},
  {mod, {erlmcp_ldap_app, []}},
  {env, [{pool_size, 10},
         {connection_timeout, 5000},
         {query_timeout, 10000},
         {base_dn, "dc=example,dc=com"},
         {user_filter, "(&(objectClass=user)(objectCategory=person))"},
         {group_filter, "(objectCategory=group)"},
         {auto_sync, true},
         {sync_interval, 300}]}
 ]}.