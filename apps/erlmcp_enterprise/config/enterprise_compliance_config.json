{
  "compliance": {
    "frameworks": [
      {
        "name": "SOC2",
        "type": "security",
        "version": "2017",
        "enabled": true,
        "controls": {
          "access_control": {
            "enabled": true,
            "enforced": true,
            "policies": {
              "authentication_required": true,
              "mfa_required": true,
              "access_review_frequency": "quarterly",
              "password_policy": {
                "min_length": 12,
                "complexity": "medium",
                "expiry": 90,
                "reuse_count": 5
              }
            }
          },
          "audit_logging": {
            "enabled": true,
            "enforced": true,
            "retention": {
              "period": "365d",
              "storage": "encrypted"
            },
          "log_events": {
            "include_all": true,
            "exclude_sensitive": false,
            "fields": ["timestamp", "user", "action", "resource", "result", "ip_address"]
          }
        }
      },
      {
        "name": "ISO27001",
        "type": "security",
        "version": "2022",
        "enabled": true,
        "controls": {
          "information_security": {
            "enabled": true,
            "enforced": true,
            "measures": {
              "access_control": true,
              "encryption": true,
              "vulnerability_management": true,
              "security_awareness": true
            }
          },
          "asset_management": {
            "enabled": true,
            "enforced": true,
            "inventory": {
              "frequency": "daily",
              "include_all": true,
              "classify_assets": true
            }
          }
        }
      },
      {
        "name": "HIPAA",
        "type": "healthcare",
        "version": "2023",
        "enabled": false,
        "controls": {
          "privacy_rule": {
            "enabled": true,
            "enforced": true,
            "requirements": {
              "minimum_necessary": true,
              "privacy_notice": true,
              "authorization": true
            }
          },
          "security_rule": {
            "enabled": true,
            "enforced": true,
            "safeguards": {
              "administrative": true,
              "physical": true,
              "technical": true
            }
          }
        }
      }
    ],
    "auditing": {
      "enabled": true,
      "real_time": true,
      "sampling": {
        "enabled": true,
        "rate": 1.0,
        "sample_window": 86400
      },
      "retention": {
        "period": "365d",
        "storage": "encrypted",
        "backup": {
          "enabled": true,
          "frequency": "daily",
          "copies": 3,
          "location": "secure_backup"
        }
      },
      "completeness": {
        "ensure_all_operations": true,
        "include_system_events": true,
        "include_user_events": true,
        "exclude_delegated": false
      }
    },
    "data_protection": {
      "encryption": {
        "enabled": true,
        "at_rest": {
          "algorithm": "AES-256",
          "key_rotation": "90d",
          "storage": true
        },
        "in_transit": {
          "algorithm": "TLSv1.3",
          "certificate": "required",
          "always_encrypt": true
        },
        "at_processing": {
          "enabled": false,
          "method": "homomorphic",
          "algorithms": ["RSA", "Paillier"]
        }
      },
      "access_control": {
        "rbac": {
          "enabled": true,
          "granularity": "fine",
          "inheritance": true,
          "separation": true
        },
        "abac": {
          "enabled": true,
          "policies": [],
          "attributes": []
        }
      },
      "data_retention": {
        "default_period": "7y",
        "backup_retention": "30d",
        "archive_retention": "10y",
        "delete_after": "30d"
      }
    },
    "incident_response": {
      "enabled": true,
      "automated": true,
      "response_plan": {
        "detection": {
          "real_time_monitoring": true,
          "automated_detection": true,
          "alert_threshold": 15
        },
        "containment": {
          "automatic_isolation": true,
          "quarantine_infected": true,
          "preserve_evidence": true
        },
        "eradication": {
          "root_cause_analysis": true,
          "remediation": true,
          "patch_management": true
        },
        "recovery": {
          "system_restore": true,
          "data_recovery": true,
          "business_continuity": true
        }
      },
      "notification": {
        "immediate": true,
        "contacts": {
          "security_team": "security@example.com",
          "management": "management@example.com",
          "legal": "legal@example.com"
        },
        "escalation": {
          "initial": 15,
          "critical": 5,
          "major": 30,
          "minor": 60
        }
      }
    },
    "reporting": {
      "enabled": true,
      "schedule": {
        "daily": "00:00",
        "weekly": "sunday 00:00",
        "monthly": "1st 00:00",
        "quarterly": "1st january 00:00"
      },
      "reports": [
        {
          "name": "compliance_summary",
          "type": "compliance",
          "format": "pdf",
          "distribution": ["management", "audit", "compliance"]
        },
        {
          "name": "security_incident",
          "type": "security",
          "format": "pdf",
          "distribution": ["security", "management", "legal"]
        },
        {
          "name": "system_health",
          "type": "operational",
          "format": "json",
          "distribution": ["operations", "monitoring"]
        }
      ]
    }
  }
}