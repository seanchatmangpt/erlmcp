{
  "logging_platforms": {
    "elk": {
      "enabled": true,
      "elasticsearch": {
        "hosts": ["https://elasticsearch.example.com:9200"],
        "username": "elastic",
        "password": "your-password",
        "index": "erlmcp-%{+YYYY.MM.dd}",
        "type": "_doc",
        "timeout": 30000,
        "ssl": {
          "enabled": true,
          "verify": false,
          "cert_file": "/path/to/ca.crt"
        },
        "connection_pool_size": 10,
        "retry_attempts": 3,
        "batch_size": 1000,
        "flush_interval": 5000
      },
      "logstash": {
        "enabled": true,
        "host": "logstash.example.com",
        "port": 5044,
        "timeout": 30000,
        "retry_attempts": 3,
        "pipeline": "erlmcp",
        "codec": "json_lines"
      },
      "kibana": {
        "enabled": true,
        "host": "kibana.example.com",
        "port": 5601,
        "index": "erlmcp-*",
        "default_time_range": "24h",
        "default_columns": ["timestamp", "level", "message", "service"]
      },
      "logging": {
        "level": "info",
        "format": "json",
        "include_stack_trace": true,
        "include_request_id": true,
        "include_session_id": true,
        "custom_fields": {
          "environment": "production",
          "component": "erlmcp-enterprise",
          "version": "3.0.0"
        }
      }
    },
    "graylog": {
      "enabled": false,
      "host": "graylog.example.com",
      "port": 12201,
      "protocol": "udp",
      "timeout": 5000,
      "retry_attempts": 3,
      "batch_size": 1000,
      "flush_interval": 1000,
      "gelf": {
        "version": "1.1",
        "compress": "gzip",
        "chunk_size": 1400,
        "include_additional_data": true,
        "facility": "erlmcp-enterprise",
        "full_message": true,
        "extract_stack_trace": true
      },
      "index": "erlmcp",
      "stream_rules": [
        {
          "field": "component",
          "value": "erlmcp-enterprise",
          "type": "exact"
        }
      ]
    },
    "sumologic": {
      "enabled": false,
      "endpoint": "https://sumologic.example.com",
      "access_id": "",
      "access_key": "",
      "timeout": 30000,
      "retry_attempts": 3,
      "batch_size": 1000,
      "flush_interval": 5000,
      "source_category": "erlmcp/enterprise",
      "source_name": "erlmcp-enterprise",
      "format": "json",
      "encoding": "UTF-8",
      "message_key": "message",
      "severity_key": "level",
      "timestamp_key": "timestamp",
      "host_key": "hostname",
      "use_https": true,
      "verify_ssl": true,
      "compression": "gzip",
      "buffer_size": 10000
    }
  },
  "log_rotation": {
    "enabled": true,
    "rotation_size": "100MB",
    "rotation_count": 7,
    "compress_old": true,
    "max_file_size": "500MB",
    "log_files": [
      {
        "name": "erlmcp-enterprise.log",
        "level": "info",
        "max_size": "100MB",
        "max_files": 10
      },
      {
        "name": "erlmcp-error.log",
        "level": "error",
        "max_size": "50MB",
        "max_files": 5
      },
      {
        "name": "erlmcp-audit.log",
        "level": "audit",
        "max_size": "200MB",
        "max_files": 7
      }
    ]
  },
  "log_retention": {
    "elasticsearch": "30d",
    "graylog": "90d",
    "sumologic": "90d",
    "local_files": "7d",
    "audit_logs": "365d"
  },
  "log_aggregation": {
    "enabled": true,
    "centralized": true,
    "ship_logs": true,
    "archival": {
      "enabled": true,
      "destination": "s3",
      "bucket": "erlmcp-logs-archive",
      "prefix": "enterprise/",
      "retention_days": 365,
      "glacier_transition": "30",
      "delete_after": "3650"
    }
  }
}