{
  "identity_providers": {
    "okta": {
      "enabled": true,
      "endpoint": "https://your-org.okta.com",
      "client_id": "your-client-id",
      "client_secret": "your-client-secret",
      "authorization_server": "default",
      "scopes": ["openid", "profile", "email", "groups"],
      "cache_ttl": 300,
      "connection_pool_size": 10,
      "timeout": 30000,
      "retry_attempts": 3,
      "tenant_id": "your-tenant-id",
      "user_groups_mapping": {
        "admin": ["Enterprise Admins"],
        "developer": ["Developers", "Engineers"],
        "viewer": ["Readers", "Viewers"]
      },
      "api_token": "your-api-token",
      "base_path": "/api/v1"
    },
    "azure_ad": {
      "enabled": false,
      "tenant_id": "",
      "client_id": "",
      "client_secret": "",
      "redirect_uri": "http://localhost:8080/auth/callback",
      "scopes": ["User.Read", "Group.Read.All", "RoleManagement.Read.Directory"],
      "cache_ttl": 300,
      "connection_pool_size": 10,
      "timeout": 30000,
      "retry_attempts": 3,
      "graph_api_base": "https://graph.microsoft.com/v1.0",
      "token_endpoint": "https://login.microsoftonline.com/{tenant_id}/oauth2/v2.0/token",
      "authorization_endpoint": "https://login.microsoftonline.com/{tenant_id}/oauth2/v2.0/authorize",
      "session_state_cookie_name": "ms_auth_session"
    },
    "adfs": {
      "enabled": false,
      "endpoint": "",
      "client_id": "",
      "client_secret": "",
      "redirect_uri": "http://localhost:8080/auth/callback",
      "scopes": ["openid", "profile"],
      "cache_ttl": 300,
      "connection_pool_size": 10,
      "timeout": 30000,
      "retry_attempts": 3,
      "metadata_url": "",
      "issuer": "",
      "realm": "",
      "use_jwt": true,
      "jwt_issuer": "",
      "jwt_audience": ""
    }
  },
  "authentication_settings": {
    "default_provider": "okta",
    "session_timeout": 3600,
    "refresh_token_window": 300,
    "max_concurrent_sessions": 5,
    "single_sign_on": {
      "enabled": true,
      "auto_provision_users": false,
      "provision_attributes": ["email", "name", "groups"],
      "sync_schedule": "0 0 */6 * * *"
    },
    "mfa": {
      "required": true,
      "enforce_for_admins": true,
      "allowed_factors": ["otp", "push", "webauthn"],
      "remember_device": true,
      "remember_duration": 86400
    },
    "access_control": {
      "enable_role_based_access": true,
      "enable_attribute_based_access": false,
      "policies": [
        {
          "name": "admin_access",
          "conditions": {"role": ["admin"]},
          "permissions": ["read", "write", "delete", "manage"]
        },
        {
          "name": "developer_access",
          "conditions": {"role": ["developer"]},
          "permissions": ["read", "write"]
        },
        {
          "name": "viewer_access",
          "conditions": {"role": ["viewer"]},
          "permissions": ["read"]
        }
      ]
    }
  }
}