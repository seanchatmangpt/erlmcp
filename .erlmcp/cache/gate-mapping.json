{
  "version": "1.0.0",
  "gates": {
    "compile": {
      "trigger": "always",
      "cost_estimate_seconds": 15,
      "critical": true
    },
    "eunit": {
      "trigger": "code_change",
      "cost_estimate_seconds": 2,
      "cost_per_suite": 2,
      "critical": true
    },
    "ct": {
      "trigger": "integration_change",
      "cost_estimate_seconds": 5,
      "cost_per_suite": 5,
      "critical": true
    },
    "coverage": {
      "trigger": "test_change",
      "cost_estimate_seconds": 10,
      "critical": true
    },
    "dialyzer": {
      "trigger": "type_spec_change",
      "cost_estimate_seconds": 120,
      "critical": false
    },
    "xref": {
      "trigger": "import_change",
      "cost_estimate_seconds": 5,
      "critical": false
    },
    "benchmarks": {
      "trigger": "perf_critical_change",
      "cost_estimate_seconds": 180,
      "critical": false,
      "modules": [
        "erlmcp_json_rpc",
        "erlmcp_registry",
        "erlmcp_cache",
        "erlmcp_transport"
      ]
    }
  }
}
