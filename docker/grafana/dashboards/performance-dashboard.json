{
  "dashboard": {
    "id": null,
    "title": "erlmcp v3 Performance Dashboard",
    "tags": ["erlmcp", "performance", "observability"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "erlmcp_system_uptime_seconds",
            "legendFormat": "Uptime"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "text": "{{value}} seconds",
                  "match": "null"
                },
                "type": "value"
              },
              {
                "options": {
                  "result": "Uptime",
                  "match": "1"
                },
                "type": "text"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 3600
                }
              ]
            },
            "unit": "s"
          }
        },
        "links": []
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(erlmcp_errors_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "req/s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Request Latency Percentiles",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, erlmcp_request_duration_seconds_bucket)",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.90, erlmcp_request_duration_seconds_bucket)",
            "legendFormat": "90th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, erlmcp_request_duration_seconds_bucket)",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, erlmcp_request_duration_seconds_bucket)",
            "legendFormat": "99th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 0.5
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Requests Per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(erlmcp_requests_total[5m])",
            "legendFormat": "Total RPS"
          },
          {
            "expr": "rate(erlmcp_requests_completed_total[5m])",
            "legendFormat": "Completed RPS"
          },
          {
            "expr": "rate(erlmcp_requests_failed_total[5m])",
            "legendFormat": "Failed RPS"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "req/s",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "erlmcp_active_connections",
            "legendFormat": "Active"
          },
          {
            "expr": "erlmcp_max_connections",
            "legendFormat": "Max"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 500
                },
                {
                  "color": "red",
                  "value": 5000
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "erlmcp_memory_usage_bytes",
            "legendFormat": "Memory"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 536870912
                },
                {
                  "color": "red",
                  "value": 1073741824
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "text": "{{valueBytes}}",
                  "match": "null"
                },
                "type": "value"
              }
            ]
          }
        }
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "erlmcp_cpu_usage_percent",
            "legendFormat": "CPU %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 8,
          "y": 24
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Queue Metrics",
        "type": "stat",
        "targets": [
          {
            "expr": "erlmcp_queue_size",
            "legendFormat": "Queue Size"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 32
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "red",
                  "value": 5000
                }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(erlmcp_messages_processed_total[5m])",
            "legendFormat": "Messages/s"
          },
          {
            "expr": "rate(erlmcp_tools_executed_total[5m])",
            "legendFormat": "Tools/s"
          },
          {
            "expr": "rate(erlmcp_resources_accessed_total[5m])",
            "legendFormat": "Resources/s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 8,
          "y": 32
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10000
                },
                {
                  "color": "red",
                  "value": 50000
                }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Error Breakdown",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(erlmcp_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 40
        },
        "options": {
          "displayLabels": true,
          "legend": {
            "displayMode": "table",
            "placement": "right"
          },
          "pieType": "pie",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "tooltip": {
            "mode": "single",
            "sort": "desc"
          }
        }
      },
      {
        "id": 11,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "erlmcp_request_duration_seconds_bucket",
            "format": "heatmap"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 40
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "scheme",
              "scheme": "YlOrRd",
              "fixed": false
            },
            "custom": {
              "axisSoftMin": 0,
              "axisSoftMax": 1000,
              "axisCenteredZero": false,
              "drawStyle": "line",
              "fillOpacity": 0,
              "gradientMode": "none",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "mode": "none",
                "group": "A"
              },
              "thresholdsStyle": {
                "mode": "line"
              }
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "Âµs"
          }
        }
      },
      {
        "id": 12,
        "title": "Component Status",
        "type": "stat",
        "targets": [
          {
            "expr": "erlmcp_component_health",
            "legendFormat": "{{component}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 48
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 1
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 0
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "text": "Healthy",
                  "match": "1"
                },
                "type": "value"
              },
              {
                "options": {
                  "text": "Warning",
                  "match": "0.5"
                },
                "type": "value"
              },
              {
                "options": {
                  "text": "Critical",
                  "match": "0"
                },
                "type": "value"
              },
              {
                "options": {
                  "text": "Unknown",
                  "match": "null"
                },
                "type": "value"
              }
            ]
          }
        }
      },
      {
        "id": 13,
        "title": "Session Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "erlmcp_active_sessions",
            "legendFormat": "Active Sessions"
          },
          {
            "expr": "rate(erlmcp_sessions_created_total[5m])",
            "legendFormat": "Created/s"
          },
          {
            "expr": "rate(erlmcp_sessions_closed_total[5m])",
            "legendFormat": "Closed/s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 48
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10000
                },
                {
                  "color": "red",
                  "value": 50000
                }
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "component",
          "type": "query",
          "query": "components",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "regex": ".*",
          "sort": 1,
          "tagValuesQuery": "",
          "tags": [],
          "tagsQuery": "",
          "type": "query"
        },
        {
          "name": "duration",
          "type": "custom",
          "options": [
            {
              "selected": false,
              "text": "5 minutes",
              "value": "5m"
            },
            {
              "selected": true,
              "text": "30 minutes",
              "value": "30m"
            },
            {
              "selected": false,
              "text": "1 hour",
              "value": "1h"
            },
            {
              "selected": false,
              "text": "6 hours",
              "value": "6h"
            },
            {
              "selected": false,
              "text": "12 hours",
              "value": "12h"
            },
            {
              "selected": false,
              "text": "1 day",
              "value": "1d"
            },
            {
              "selected": false,
              "text": "7 days",
              "value": "7d"
            }
          ],
          "query": "5m,30m,1h,6h,12h,1d,7d",
          "current": {
            "selected": true,
            "text": "30 minutes",
            "value": "30m"
          },
          "default": "30m",
          "skipUrlSync": false,
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{severity=\"warning\"}",
          "iconColor": "rgba(255, 191, 0, 1)",
          "name": "Warnings",
          "type": "expression"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{severity=\"critical\"}",
          "iconColor": "rgba(255, 50, 50, 1)",
          "name": "Critical Alerts",
          "type": "expression"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "erlmcp_security_events",
          "iconColor": "rgba(255, 50, 50, 1)",
          "name": "Security Events",
          "type": "expression"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "links": [],
    "panelsRef": "panels"
  }
}