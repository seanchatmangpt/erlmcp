# Staging Environment Configuration
# Generated: 2026-01-26

# Application
ERLMCP_ENV=staging
ERLMCP_NODE_NAME=erlmcp@staging
ERLMCP_COOKIE=staging_secret_cookie_change_me

# Database
ERLMCP_DB_HOST=postgres
ERLMCP_DB_PORT=5432
ERLMCP_DB_NAME=erlmcp_staging
ERLMCP_DB_USER=erlmcp
ERLMCP_DB_PASSWORD=staging_db_password_change_me

# Ports
ERLMCP_HTTP_PORT=8080
ERLMCP_DASHBOARD_PORT=3000
ERLMCP_EPMD_PORT=4369

# TCPS Configuration
TCPS_QUALITY_PASS_RATE=0.80
TCPS_COVERAGE_THRESHOLD=0.70
TCPS_WIP_LIMITS='{"security":3,"reliability":5,"cost":5,"compliance":3,"feature":10}'

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_SERVICE_NAME=erlmcp-staging
OTEL_RESOURCE_ATTRIBUTES=service.namespace=staging,service.version=0.6.0
OTEL_SAMPLING_RATE=0.50

# Grafana
GRAFANA_PASSWORD=staging_grafana_admin

# Security (Basic Auth for Staging)
ERLMCP_AUTH_ENABLED=true
ERLMCP_AUTH_USER=admin
ERLMCP_AUTH_PASSWORD=staging_admin_password_change_me

# Logging
ERLMCP_LOG_LEVEL=debug
ERLMCP_LOG_FILE=/var/log/erlmcp/staging.log

# Performance
ERLMCP_POOL_SIZE=10
ERLMCP_MAX_CONNECTIONS=100
ERLMCP_TIMEOUT=30000

# Health Check
ERLMCP_HEALTH_CHECK_INTERVAL=30
ERLMCP_HEALTH_CHECK_TIMEOUT=10
