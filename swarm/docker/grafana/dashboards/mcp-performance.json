{
  "dashboard": {
    "title": "MCP Swarm Performance",
    "tags": ["mcp", "erlmcp", "swarm", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(mcp_client_requests_total[5m])",
            "legendFormat": "{{instance}} - {{method}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "mcp_client_connections_active",
            "legendFormat": "{{client_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Latency Percentiles (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(mcp_client_request_duration_ms_bucket[1m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mcp_client_request_duration_ms_bucket[1m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(mcp_client_request_duration_ms_bucket[1m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate (errors/sec)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(mcp_client_messages_errors_total[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Messages Sent (total)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "mcp_client_messages_sent_total",
            "legendFormat": "{{client_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Error Count (total)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "mcp_client_messages_errors_total",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Server Resource Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~'erlmcp-server.*'}[5m])",
            "legendFormat": "CPU - {{name}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
