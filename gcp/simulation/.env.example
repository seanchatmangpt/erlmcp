# GCP Simulation Environment Configuration
# ============================================================================
# Copy this file to .env and customize as needed
# Usage: docker compose --env-file .env -f docker-compose.gcp-sim.yml up
# ============================================================================

# Project Configuration
GCP_PROJECT_ID=erlmcp-local
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Cloud SQL (PostgreSQL) Simulation
CLOUDSQL_PORT=5432
CLOUDSQL_PROXY_PORT=15432
POSTGRES_DB=erlmcp
POSTGRES_USER=erlmcp
POSTGRES_PASSWORD=erlmcp_secure

# Memorystore (Redis) Simulation
MEMORYSTORE_PORT=6379
REDIS_PASSWORD=

# Cloud Storage (MinIO) Simulation
GCS_PORT=9000
GCS_CONSOLE_PORT=9001
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin_secret

# Pub/Sub Emulator
PUBSUB_PORT=8085
PUBSUB_EMULATOR_HOST=localhost:8085

# Firestore Emulator
FIRESTORE_PORT=8086
FIRESTORE_EMULATOR_HOST=localhost:8086

# Secret Manager (Vault) Simulation
VAULT_PORT=8200
VAULT_TOKEN=root
VAULT_ADDR=http://localhost:8200

# Cloud Logging (Loki) Simulation
LOKI_PORT=3100

# Cloud Monitoring (Prometheus/Grafana) Simulation
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Load Balancer (Traefik) Simulation
LB_HTTP_PORT=80
LB_HTTPS_PORT=443
LB_DASHBOARD_PORT=8081

# IAM (OAuth Mock) Simulation
IAM_PORT=8080

# Metadata Server Simulation
METADATA_PORT=8082

# ============================================================================
# erlmcp Application Configuration
# ============================================================================

# Database connection (use cloudsql-proxy-sim for Cloud SQL Proxy simulation)
DATABASE_URL=postgresql://erlmcp:erlmcp_secure@localhost:5432/erlmcp

# Redis connection
REDIS_URL=redis://localhost:6379

# GCS/S3 configuration
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=admin_secret
AWS_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=erlmcp-artifacts

# Logging
LOG_LEVEL=debug

# Environment
ERLMCP_ENV=development
ERLMCP_PROFILE=dev
