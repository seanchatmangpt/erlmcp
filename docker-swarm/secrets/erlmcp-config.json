{
  "cluster": {
    "name": "erlmcp-swarm",
    "size": 3,
    "discovery": "gproc",
    "heartbeat": "30s",
    "timeout": "60s"
  },
  "registry": {
    "backend": "gproc",
    "cleanup_interval": "5m",
    "max_services": 1000
  },
  "session": {
    "backend": "ets",
    "max_sessions": 10000,
    "session_timeout": "30m",
    "cleanup_interval": "5m"
  },
  "transport": {
    "stdio": {
      "enabled": true,
      "max_connections": 1000,
      "buffer_size": 8192
    },
    "tcp": {
      "enabled": true,
      "port": 4000,
      "max_connections": 5000,
      "tls": true,
      "keepalive": true,
      "timeout": "30s"
    },
    "http": {
      "enabled": true,
      "port": 80,
      "max_connections": 10000,
      "timeout": "30s",
      "compression": true
    },
    "websocket": {
      "enabled": true,
      "port": 9003,
      "max_connections": 5000,
      "timeout": "30s"
    }
  },
  "security": {
    "auth": {
      "enabled": true,
      "jwt_secret": "${JWT_SECRET}",
      "jwt_expiration": "24h",
      "cors": {
        "enabled": true,
        "origins": ["*"],
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "headers": ["Content-Type", "Authorization"]
      }
    },
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 1000,
      "burst_size": 500,
      "timeout": "5m"
    },
    "tls": {
      "enabled": true,
      "cert_file": "/app/tls/cert.pem",
      "key_file": "/app/tls/key.pem",
      "ca_file": "/app/tls/ca.pem",
      "min_version": "TLS1.2"
    }
  },
  "observability": {
    "otel": {
      "enabled": true,
      "endpoint": "http://erlmcp-otel-collector:4317",
      "sampling": "true",
      "traces": {
        "probability": 0.1
      }
    },
    "metrics": {
      "enabled": true,
      "port": 9100,
      "collect_interval": "15s"
    },
    "logging": {
      "level": "info",
      "format": "json",
      "output": "stdout",
      "rotate": {
        "enabled": true,
        "max_size": "100MB",
        "max_files": 10
      }
    }
  },
  "performance": {
    "concurrency": 1000,
    "max_heap_size": "4GB",
    "process_pool": {
      "size": 100,
      "timeout": "30s"
    },
    "cache": {
      "enabled": true,
      "ttl": "5m",
      "max_size": "1GB"
    }
  },
  "monitoring": {
    "health_check": {
      "enabled": true,
      "interval": "30s",
      "timeout": "10s",
      "retries": 3
    },
    "alerts": {
      "enabled": true,
      "email": {
        "enabled": false,
        "smtp": "smtp.example.com",
        "port": 587,
        "recipients": ["admin@example.com"]
      },
      "slack": {
        "enabled": false,
        "webhook": "${SLACK_WEBHOOK}",
        "channel": "#alerts"
      }
    }
  }
}